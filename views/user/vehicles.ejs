<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Vehicles - Parking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar { position: fixed; top: 0; bottom: 0; left: 0; z-index: 100; padding: 48px 0 0; box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1); }
        .sidebar-sticky { position: relative; top: 0; padding-top: .5rem; overflow-x: hidden; overflow-y: auto; }
        main { padding-top: 48px; }
        .vehicle-card { transition: transform 0.2s ease, box-shadow 0.2s ease; }
        .vehicle-card:hover { transform: translateY(-2px); box-shadow: 0 4px 8px rgba(0,0,0,0.1); }
    </style>
</head>
<body>
    <%- include('../patials/_dashheader') %>

    
    <div class="container-fluid">
        <div class="row">
            <%- include('../patials/_dashnav') %>
            
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">My Vehicles</h1>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addVehicleModal">
                        <i class="fas fa-plus me-1"></i>Add Vehicle
                    </button>
                </div>

                <!-- Success Messages -->
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <% if (success === 'vehicle_added') { %>
                            <i class="fas fa-check-circle me-2"></i>Vehicle added successfully!
                        <% } else if (success === 'vehicle_deleted') { %>
                            <i class="fas fa-check-circle me-2"></i>Vehicle deleted successfully!
                        <% } else if (success === 'vehicle_updated') { %>
                            <i class="fas fa-check-circle me-2"></i>Vehicle updated successfully!
                        <% } %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Error Messages -->
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <% if (error === 'missing_fields') { %>
                            <i class="fas fa-exclamation-triangle me-2"></i>Please fill all required fields!
                        <% } else if (error === 'duplicate_plate') { %>
                            <i class="fas fa-exclamation-triangle me-2"></i>Vehicle with this license plate already exists!
                        <% } else if (error === 'vehicle_add_failed') { %>
                            <i class="fas fa-exclamation-triangle me-2"></i>Failed to add vehicle. Please try again!
                        <% } else if (error === 'delete_failed') { %>
                            <i class="fas fa-exclamation-triangle me-2"></i>Failed to delete vehicle. Please try again!
                        <% } else if (error === 'invalid_vehicle') { %>
                            <i class="fas fa-exclamation-triangle me-2"></i>Invalid vehicle data!
                        <% } %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <div class="row">
                    <% if (vehicles && vehicles.length > 0) { %>
                        <% vehicles.forEach(vehicle => { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 vehicle-card">
                                    <div class="card-body text-center">
                                        <div class="vehicle-icon mb-3">
                                            <% if (vehicle.type === 'Motorcycle') { %>
                                                <i class="fas fa-motorcycle fa-3x text-primary"></i>
                                            <% } else if (vehicle.type === 'SUV') { %>
                                                <i class="fas fa-truck fa-3x text-primary"></i>
                                            <% } else if (vehicle.type === 'Truck') { %>
                                                <i class="fas fa-truck-monster fa-3x text-primary"></i>
                                            <% } else if (vehicle.type === 'Van') { %>
                                                <i class="fas fa-shuttle-van fa-3x text-primary"></i>
                                            <% } else { %>
                                                <i class="fas fa-car fa-3x text-primary"></i>
                                            <% } %>
                                        </div>
                                        <h5 class="card-title fw-bold"><%= vehicle.license_plate %></h5>
                                        <p class="card-text">
                                            <span class="badge bg-primary"><%= vehicle.type %></span>
                                            <% if (vehicle.is_default) { %>
                                                <span class="badge bg-success ms-1">Default</span>
                                            <% } %>
                                        </p>
                                        <p class="text-muted small mb-3">
                                            <i class="fas fa-calendar me-1"></i>
                                            Added on <%= new Date(vehicle.created_at).toLocaleDateString('en-US', { 
                                                year: 'numeric', 
                                                month: 'short', 
                                                day: 'numeric' 
                                            }) %>
                                        </p>
                                        <div class="d-flex gap-2 justify-content-center">
                                            <% if (!vehicle.is_default) { %>
                                                <form action="/vehicles/set-default/<%= vehicle.vehicle_id %>" method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-star me-1"></i>Set Default
                                                    </button>
                                                </form>
                                            <% } %>
                                            <form action="/vehicles/delete/<%= vehicle.vehicle_id %>" method="POST" 
                                                  onsubmit="return confirm('Are you sure you want to delete this vehicle? This action cannot be undone.')">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash me-1"></i>Remove
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12 text-center py-5">
                            <i class="fas fa-car fa-4x text-muted mb-4"></i>
                            <h4 class="text-muted mb-3">No vehicles registered</h4>
                            <p class="text-muted mb-4">Add your first vehicle to get started with parking reservations.</p>
                            <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#addVehicleModal">
                                <i class="fas fa-plus me-2"></i>Add Your First Vehicle
                            </button>
                        </div>
                    <% } %>
                </div>
            </main>
        </div>
    </div>

    <!-- Add Vehicle Modal -->
    <div class="modal fade" id="addVehicleModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-car me-2"></i>Add New Vehicle
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form action="/vehicles/add" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">License Plate <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="license_plate" 
                                   placeholder="e.g., KAA 123A" required
                                   pattern="[A-Z0-9\s]+" title="Please enter a valid license plate (letters, numbers, and spaces only)"
                                   maxlength="15">
                            <div class="form-text">Enter your vehicle's license plate number</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Vehicle Type <span class="text-danger">*</span></label>
                            <select class="form-select" name="type" required>
                                <option value="">Select Vehicle Type</option>
                                <option value="Car">Car</option>
                                <option value="Motorcycle">Motorcycle</option>
                                <option value="SUV">SUV</option>
                                <option value="Truck">Truck</option>
                                <option value="Van">Van</option>
                            </select>
                            <div class="form-text">Select the type of your vehicle</div>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" name="set_as_default" id="setAsDefault" value="1" checked>
                            <label class="form-check-label" for="setAsDefault">
                                Set as default vehicle
                            </label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-1"></i>Cancel
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Add Vehicle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Client-side validation for license plate
        document.addEventListener('DOMContentLoaded', function() {
            const licensePlateInput = document.querySelector('input[name="license_plate"]');
            
            if (licensePlateInput) {
                licensePlateInput.addEventListener('input', function(e) {
                    // Convert to uppercase and remove special characters
                    e.target.value = e.target.value.toUpperCase().replace(/[^A-Z0-9\s]/g, '');
                });
            }

            // Auto-dismiss alerts after 5 seconds
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });

            // Handle form submission
            const addVehicleForm = document.querySelector('form[action="/vehicles/add"]');
            if (addVehicleForm) {
                addVehicleForm.addEventListener('submit', function(e) {
                    const licensePlate = document.querySelector('input[name="license_plate"]').value.trim();
                    const vehicleType = document.querySelector('select[name="type"]').value;
                    
                    if (!licensePlate) {
                        e.preventDefault();
                        alert('Please enter a license plate number');
                        return;
                    }
                    
                    if (!vehicleType) {
                        e.preventDefault();
                        alert('Please select a vehicle type');
                        return;
                    }
                });
            }
        });
    </script>
</body>
</html>