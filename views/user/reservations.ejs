<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Reservations - Parking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar { position: fixed; top: 0; bottom: 0; left: 0; z-index: 100; padding: 48px 0 0; box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1); }
        .sidebar-sticky { position: relative; top: 0; padding-top: .5rem; overflow-x: hidden; overflow-y: auto; }
        main { padding-top: 48px; }
    </style>
</head>
<body>
    <%- include('../patials/_dashheader') %>
    
    <div class="container-fluid">
        <div class="row">
            <%- include('../patials/_dashnav') %>
            
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">My Reservations</h1>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addReservationModal">
                        <i class="fas fa-plus me-1"></i>New Reservation
                    </button>
                </div>

                <!-- Server-side URL parameter handling -->
                <% if (success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <% if (success === 'reservation_created') { %>
                            Reservation created successfully!
                        <% } %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <% if (error === 'missing_fields') { %>
                            Please fill all required fields!
                        <% } else if (error === 'duplicate_reservation') { %>
                            Reservation already exists for this slot and time!
                        <% } else if (error === 'reservation_failed') { %>
                            Failed to create reservation. Please try again!
                        <% } %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <div class="row">
                    <% if (reservations.length > 0) { %>
                        <% reservations.forEach(reservation => { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 
                                    <% const now = new Date(); %>
                                    <% const start = new Date(reservation.start_time); %>
                                    <% const end = new Date(reservation.end_time); %>
                                    <%= now < start ? 'border-info' : now >= start && now <= end ? 'border-success' : 'border-secondary' %>">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h5 class="card-title">Slot <%= reservation.slot_number %></h5>
                                            <span class="badge 
                                                <%= now < start ? 'bg-info' : now >= start && now <= end ? 'bg-success' : 'bg-secondary' %>">
                                                <%= now < start ? 'Upcoming' : now >= start && now <= end ? 'Active' : 'Completed' %>
                                            </span>
                                        </div>
                                        <p class="card-text">
                                            <strong>Vehicle:</strong> <%= reservation.license_plate %><br>
                                            <strong>From:</strong> <%= new Date(reservation.start_time).toLocaleString() %><br>
                                            <strong>To:</strong> <%= new Date(reservation.end_time).toLocaleString() %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12 text-center py-5">
                            <i class="fas fa-calendar-check fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No reservations yet</h5>
                            <p class="text-muted">Make your first parking reservation to get started.</p>
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addReservationModal">
                                <i class="fas fa-plus me-1"></i>Make First Reservation
                            </button>
                        </div>
                    <% } %>
                </div>
            </main>
        </div>
    </div>

    <!-- Add Reservation Modal -->
    <div class="modal fade" id="addReservationModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">New Parking Reservation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/reservations/add" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Select Vehicle *</label>
                            <select class="form-control" name="vehicle_id" required>
                                <option value="">Choose Your Vehicle</option>
                                <% vehicles.forEach(vehicle => { %>
                                    <option value="<%= vehicle.vehicle_id %>">
                                        <%= vehicle.license_plate %> (<%= vehicle.type %>)
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Parking Slot *</label>
                            <select class="form-control" name="slot_id" required>
                                <option value="">Choose Parking Slot</option>
                                <% slots.forEach(slot => { %>
                                    <option value="<%= slot.slot_id %>">
                                        Slot <%= slot.slot_number %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Start Time *</label>
                                <input type="datetime-local" class="form-control" name="start_time" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">End Time *</label>
                                <input type="datetime-local" class="form-control" name="end_time" required>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Create Reservation</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>