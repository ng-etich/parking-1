<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Parking Slots - Parking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar { position: fixed; top: 0; bottom: 0; left: 0; z-index: 100; padding: 48px 0 0; box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1); }
        .sidebar-sticky { position: relative; top: 0; padding-top: .5rem; overflow-x: hidden; overflow-y: auto; }
        main { padding-top: 48px; }
        .slot-card { transition: transform 0.2s; }
        .slot-card:hover { transform: translateY(-2px); }
        .add-slot-card { 
            border: 2px dashed #dee2e6; 
            background-color: #f8f9fa; 
            cursor: pointer; 
            transition: all 0.3s ease;
        }
        .add-slot-card:hover { 
            border-color: #0d6efd; 
            background-color: #e7f1ff; 
        }
        .modal-backdrop { z-index: 1040; }
        .modal { z-index: 1050; }
    </style>
</head>
<body>
    <%- include('../patials/_dashheader') %>
    
    <div class="container-fluid">
        <div class="row">
            <%- include('../patials/_dashnav') %>
            
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Parking Slots Management</h1>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSlotModal">
                        <i class="fas fa-plus me-1"></i> Add New Slot
                    </button>
                </div>

                <!-- Server-side URL parameter handling -->
                <% if (success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        Slot updated successfully!
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        Failed to update slot. Please try again!
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <div class="row">
                    <!-- Add Slot Card -->
                    <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                        <div class="card add-slot-card h-100 d-flex align-items-center justify-content-center" 
                             data-bs-toggle="modal" data-bs-target="#addSlotModal">
                            <div class="card-body text-center py-5">
                                <i class="fas fa-plus-circle fa-3x text-muted mb-3"></i>
                                <h5 class="card-title text-muted">Add New Slot</h5>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Existing Slots -->
                    <% slots.forEach(slot => { %>
                        <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                            <div class="card slot-card h-100 
                                <%= slot.maintenance_mode ? 'border-warning' : slot.is_occupied ? 'border-danger' : 'border-success' %>">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Slot <%= slot.slot_number %></h5>
                                    
                                    <% if (slot.maintenance_mode) { %>
                                        <span class="badge bg-warning mb-3">Under Maintenance</span>
                                    <% } else if (slot.is_occupied) { %>
                                        <span class="badge bg-danger mb-3">Occupied</span>
                                        <% if (slot.current_vehicle) { %>
                                            <p class="text-muted small mb-2">
                                                <i class="fas fa-car me-1"></i><%= slot.current_vehicle %>
                                            </p>
                                        <% } %>
                                    <% } else { %>
                                        <span class="badge bg-success mb-3">Available</span>
                                    <% } %>

                                    <form action="/slots/update/<%= slot.slot_id %>" method="POST" class="mt-3">
                                        <div class="form-check form-switch mb-2">
                                            <input class="form-check-input" type="checkbox" name="is_occupied" 
                                                   <%= slot.is_occupied ? 'checked' : '' %> 
                                                   <%= slot.maintenance_mode ? 'disabled' : '' %>>
                                            <label class="form-check-label">Occupied</label>
                                        </div>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" name="maintenance_mode"
                                                   <%= slot.maintenance_mode ? 'checked' : '' %>>
                                            <label class="form-check-label">Maintenance</label>
                                        </div>
                                        <button type="submit" class="btn btn-sm btn-primary mt-3 w-100">
                                            Update Status
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>

                <% if (slots.length === 0) { %>
                    <div class="text-center py-5">
                        <i class="fas fa-parking fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No parking slots configured.</p>
                    </div>
                <% } %>
            </main>
        </div>
    </div>

    <!-- Add Slot Modal -->
    <div class="modal fade" id="addSlotModal" tabindex="-1" aria-labelledby="addSlotModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addSlotModalLabel">Add New Parking Slot</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/slots/add" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="slotNumber" class="form-label">Slot Number</label>
                            <input type="text" class="form-control" id="slotNumber" name="slot_number" required>
                        </div>
                        <div class="mb-3">
                            <label for="slotType" class="form-label">Slot Type</label>
                            <select class="form-select" id="slotType" name="slot_type" required>
                                <option value="standard">Standard</option>
                                <option value="compact">Compact</option>
                                <option value="large">Large</option>
                                <option value="handicap">Handicap Accessible</option>
                                <option value="electric">Electric Vehicle</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="slotLocation" class="form-label">Location</label>
                            <input type="text" class="form-control" id="slotLocation" name="slot_location" placeholder="e.g., Level 1, Section A">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Initial Status</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="initial_status" id="statusAvailable" value="available" checked>
                                <label class="form-check-label" for="statusAvailable">
                                    Available
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="initial_status" id="statusOccupied" value="occupied">
                                <label class="form-check-label" for="statusOccupied">
                                    Occupied
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="initial_status" id="statusMaintenance" value="maintenance">
                                <label class="form-check-label" for="statusMaintenance">
                                    Maintenance
                                </label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="slotNotes" class="form-label">Notes (Optional)</label>
                            <textarea class="form-control" id="slotNotes" name="slot_notes" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add Slot</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-generate slot number if needed
        document.addEventListener('DOMContentLoaded', function() {
            // You could implement logic here to suggest the next available slot number
            // For now, we'll just focus the input field
            const slotNumberInput = document.getElementById('slotNumber');
            if (slotNumberInput) {
                slotNumberInput.focus();
            }
            
            // Handle form submission
            const addSlotForm = document.querySelector('#addSlotModal form');
            if (addSlotForm) {
                addSlotForm.addEventListener('submit', function(e) {
                    // You could add validation here if needed
                    console.log('Adding new parking slot...');
                });
            }
        });
    </script>
</body>
</html>