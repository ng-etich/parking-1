<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reservations Management - Parking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar { position: fixed; top: 0; bottom: 0; left: 0; z-index: 100; padding: 48px 0 0; box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1); }
        .sidebar-sticky { position: relative; top: 0; padding-top: .5rem; overflow-x: hidden; overflow-y: auto; }
        main { padding-top: 48px; }
        .reservation-card { transition: transform 0.2s; }
        .reservation-card:hover { transform: translateY(-2px); }
        .status-badge { font-size: 0.75rem; }
        .price-tag { font-size: 1.1rem; font-weight: bold; color: #198754; }
        .cancelled-reservation { border-left: 4px solid #dc3545 !important; opacity: 0.7; }
        .payment-pending { border-left: 4px solid #ffc107 !important; }
        .payment-completed { border-left: 4px solid #198754 !important; }
        .action-buttons .btn { font-size: 0.8rem; }
        .table-actions { white-space: nowrap; }
    </style>
</head>
<body>
    <%- include('../patials/_dashheader') %>
    
    <div class="container-fluid">
        <div class="row">
            <%- include('../patials/_dashnav') %>
            
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Reservations Management</h1>
                    <div>
                        <button class="btn btn-outline-secondary me-2" onclick="window.location.reload()">
                            <i class="fas fa-sync-alt me-1"></i>Refresh
                        </button>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addReservationModal">
                            <i class="fas fa-plus me-1"></i>Add Reservation
                        </button>
                    </div>
                </div>

                <!-- Server-side URL parameter handling -->
                <% if (success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <% if (success === 'reservation_created') { %>
                            <i class="fas fa-check-circle me-2"></i>Reservation created successfully!
                        <% } else if (success === 'reservation_cancelled') { %>
                            <i class="fas fa-check-circle me-2"></i>Reservation cancelled successfully!
                        <% } else if (success === 'reservation_updated') { %>
                            <i class="fas fa-check-circle me-2"></i>Reservation updated successfully!
                        <% } else if (success === 'reservation_marked_paid') { %>
                            <i class="fas fa-check-circle me-2"></i>Reservation marked as paid successfully!
                        <% } %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <% if (error === 'missing_fields') { %>
                            Please fill all required fields!
                        <% } else if (error === 'duplicate_reservation') { %>
                            Reservation already exists for this slot and time!
                        <% } else if (error === 'reservation_failed') { %>
                            Failed to create reservation. Please try again!
                        <% } else if (error === 'cancellation_failed') { %>
                            Failed to cancel reservation. Please try again!
                        <% } else if (error === 'reservation_not_found') { %>
                            Reservation not found!
                        <% } else if (error === 'cannot_cancel_late') { %>
                            Cannot cancel reservation less than 1 hour before start time!
                        <% } else if (error === 'mark_paid_failed') { %>
                            Failed to mark reservation as paid. Please try again!
                        <% } %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-white bg-primary">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4><%= reservations.filter(r => new Date(r.start_time) > new Date() && r.status !== 'Cancelled').length %></h4>
                                        <div>Upcoming</div>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-calendar-plus fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-success">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4><%= reservations.filter(r => new Date(r.start_time) <= new Date() && new Date(r.end_time) >= new Date() && r.status !== 'Cancelled').length %></h4>
                                        <div>Active</div>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-car fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-warning">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4><%= reservations.filter(r => r.payment_status === 'pending' && r.status !== 'Cancelled').length %></h4>
                                        <div>Pending Payment</div>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-credit-card fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-secondary">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4><%= reservations.filter(r => r.status === 'Cancelled').length %></h4>
                                        <div>Cancelled</div>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-ban fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Reservations Grid View -->
                <div class="row mb-4">
                    <% if (reservations.length > 0) { %>
                        <% reservations.forEach(reservation => { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 reservation-card 
                                    <% const now = new Date(); %>
                                    <% const start = new Date(reservation.start_time); %>
                                    <% const end = new Date(reservation.end_time); %>
                                    <% const isUpcoming = now < start; %>
                                    <% const isActive = now >= start && now <= end; %>
                                    <% const isCompleted = now > end; %>
                                    <% const isCancelled = reservation.status === 'Cancelled'; %>
                                    <% const isConfirmed = reservation.status === 'Confirmed'; %>
                                    <% const isPending = reservation.status === 'Pending'; %>
                                    <%= isCancelled ? 'cancelled-reservation' : isUpcoming ? 'border-info' : isActive ? 'border-success' : 'border-secondary' %>
                                    <%= reservation.payment_status === 'pending' && !isCancelled ? 'payment-pending' : reservation.payment_status === 'completed' ? 'payment-completed' : '' %>">
                                    
                                    <div class="card-body d-flex flex-column">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h5 class="card-title">Reservation #<%= reservation.reservation_id %></h5>
                                            <div class="text-end">
                                                <span class="badge status-badge 
                                                    <%= isCancelled ? 'bg-danger' : 
                                                       isConfirmed ? 'bg-success' : 
                                                       isPending ? 'bg-warning' : 
                                                       isUpcoming ? 'bg-info' : 
                                                       isActive ? 'bg-success' : 'bg-secondary' %>">
                                                    <%= isCancelled ? 'Cancelled' : 
                                                       isConfirmed ? 'Confirmed' :
                                                       isPending ? 'Pending' :
                                                       isUpcoming ? 'Upcoming' : 
                                                       isActive ? 'Active' : 'Completed' %>
                                                </span>
                                                <div class="price-tag mt-1">
                                                    KSh <%= (reservation.amount || 0).toLocaleString() %>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <p class="card-text flex-grow-1">
                                            <strong><i class="fas fa-user me-1"></i>Customer:</strong> <%= reservation.customer_name %><br>
                                            <strong><i class="fas fa-car me-1"></i>Vehicle:</strong> <%= reservation.license_plate %><br>
                                            <strong><i class="fas fa-map-marker-alt me-1"></i>Slot:</strong> <%= reservation.slot_number %><br>
                                            <strong><i class="fas fa-play me-1"></i>From:</strong> <%= new Date(reservation.start_time).toLocaleString() %><br>
                                            <strong><i class="fas fa-stop me-1"></i>To:</strong> <%= new Date(reservation.end_time).toLocaleString() %><br>
                                            
                                            <% if (reservation.duration_hours) { %>
                                                <span class="badge bg-light text-dark">
                                                    <i class="fas fa-clock me-1"></i><%= reservation.duration_hours %> hours
                                                </span>
                                            <% } %>
                                        </p>
                                        
                                        <!-- Payment Status -->
                                        <div class="mb-3">
                                            <strong>Payment Status:</strong>
                                            <span class="badge <%= reservation.payment_status === 'completed' ? 'bg-success' : 'bg-warning' %>">
                                                <i class="fas <%= reservation.payment_status === 'completed' ? 'fa-check' : 'fa-clock' %> me-1"></i>
                                                <%= reservation.payment_status === 'completed' ? 'Paid' : 'Pending' %>
                                            </span>
                                        </div>
                                        
                                        <!-- Action Buttons -->
                                        <div class="mt-auto pt-3 border-top action-buttons">
                                            <% if (isCancelled) { %>
                                                <div class="text-center text-muted">
                                                    <i class="fas fa-ban me-1"></i>Reservation Cancelled
                                                </div>
                                            <% } else { %>
                                                <div class="d-grid gap-2">
                                                    <% if (reservation.payment_status === 'pending') { %>
                                                        <button class="btn btn-success btn-sm mark-paid-btn"
                                                                data-reservation-id="<%= reservation.reservation_id %>"
                                                                data-customer="<%= reservation.customer_name %>"
                                                                data-amount="<%= reservation.amount || 0 %>">
                                                            <i class="fas fa-check-circle me-1"></i>Mark as Paid
                                                        </button>
                                                    <% } else { %>
                                                        <span class="badge bg-success p-2">
                                                            <i class="fas fa-check me-1"></i>Payment Completed
                                                        </span>
                                                    <% } %>
                                                    
                                                    <% if (isUpcoming || isPending) { %>
                                                        <button class="btn btn-outline-danger btn-sm cancel-btn"
                                                                data-reservation-id="<%= reservation.reservation_id %>"
                                                                data-customer="<%= reservation.customer_name %>"
                                                                data-vehicle="<%= reservation.license_plate %>"
                                                                data-slot="<%= reservation.slot_number %>">
                                                            <i class="fas fa-times me-1"></i>Cancel Reservation
                                                        </button>
                                                    <% } %>
                                                    
                                                    <% if (isActive) { %>
                                                        <span class="badge bg-info p-2">
                                                            <i class="fas fa-car-side me-1"></i>Currently Active
                                                        </span>
                                                    <% } %>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12 text-center py-5">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No reservations found</h5>
                            <p class="text-muted">Create the first reservation to get started.</p>
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addReservationModal">
                                <i class="fas fa-plus me-1"></i>Create First Reservation
                            </button>
                        </div>
                    <% } %>
                </div>

                <!-- Table View for Larger Screens -->
                <div class="card shadow">
                    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-table me-2"></i>All Reservations</h5>
                        <span class="badge bg-light text-dark">
                            Total: <%= reservations.length %> reservations
                        </span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Customer</th>
                                        <th>Vehicle</th>
                                        <th>Slot</th>
                                        <th>Start Time</th>
                                        <th>End Time</th>
                                        <th>Duration</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Payment</th>
                                        <th class="table-actions">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% reservations.forEach(reservation => { %>
                                        <% const now = new Date(); %>
                                        <% const start = new Date(reservation.start_time); %>
                                        <% const end = new Date(reservation.end_time); %>
                                        <% const isUpcoming = now < start; %>
                                        <% const isActive = now >= start && now <= end; %>
                                        <% const isCompleted = now > end; %>
                                        <% const isCancelled = reservation.status === 'Cancelled'; %>
                                        <tr>
                                            <td><strong>#<%= reservation.reservation_id %></strong></td>
                                            <td><%= reservation.customer_name %></td>
                                            <td><strong><%= reservation.license_plate %></strong></td>
                                            <td><span class="badge bg-primary">Slot <%= reservation.slot_number %></span></td>
                                            <td><%= new Date(reservation.start_time).toLocaleString() %></td>
                                            <td><%= new Date(reservation.end_time).toLocaleString() %></td>
                                            <td><%= reservation.duration_hours %> hours</td>
                                            <td class="fw-bold text-success">KSh <%= (reservation.amount || 0).toLocaleString() %></td>
                                            <td>
                                                <span class="badge 
                                                    <%= isCancelled ? 'bg-danger' : 
                                                       reservation.status === 'Confirmed' ? 'bg-success' : 
                                                       reservation.status === 'Pending' ? 'bg-warning' : 
                                                       isUpcoming ? 'bg-info' : 
                                                       isActive ? 'bg-success' : 'bg-secondary' %>">
                                                    <%= isCancelled ? 'Cancelled' : 
                                                       reservation.status === 'Confirmed' ? 'Confirmed' :
                                                       reservation.status === 'Pending' ? 'Pending' :
                                                       isUpcoming ? 'Upcoming' : 
                                                       isActive ? 'Active' : 'Completed' %>
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge <%= reservation.payment_status === 'completed' ? 'bg-success' : 'bg-warning' %>">
                                                    <i class="fas <%= reservation.payment_status === 'completed' ? 'fa-check' : 'fa-clock' %> me-1"></i>
                                                    <%= reservation.payment_status === 'completed' ? 'Paid' : 'Pending' %>
                                                </span>
                                            </td>
                                            <td class="table-actions">
                                                <div class="btn-group btn-group-sm">
                                                    <% if (!isCancelled && reservation.payment_status === 'pending') { %>
                                                        <button class="btn btn-success mark-paid-btn"
                                                                data-reservation-id="<%= reservation.reservation_id %>"
                                                                data-customer="<%= reservation.customer_name %>"
                                                                data-amount="<%= reservation.amount || 0 %>"
                                                                title="Mark as Paid">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                    <% } %>
                                                    <% if (!isCancelled && (isUpcoming || reservation.status === 'Pending')) { %>
                                                        <button class="btn btn-outline-danger cancel-btn"
                                                                data-reservation-id="<%= reservation.reservation_id %>"
                                                                data-customer="<%= reservation.customer_name %>"
                                                                data-vehicle="<%= reservation.license_plate %>"
                                                                data-slot="<%= reservation.slot_number %>"
                                                                title="Cancel Reservation">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    <% } %>
                                                    <% if (isCancelled) { %>
                                                        <span class="text-muted">No actions</span>
                                                    <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Add Reservation Modal -->
    <div class="modal fade" id="addReservationModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Reservation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/reservations/add" method="POST" id="reservationForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Customer *</label>
                                <select class="form-control" name="customer_id" required id="customerSelect">
                                    <option value="">Select Customer</option>
                                    <% customers.forEach(customer => { %>
                                        <option value="<%= customer.customer_id %>">
                                            <%= customer.full_name %> (<%= customer.email %>)
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Vehicle *</label>
                                <select class="form-control" name="vehicle_id" required id="vehicleSelect">
                                    <option value="">Select Vehicle</option>
                                    <% vehicles.forEach(vehicle => { %>
                                        <option value="<%= vehicle.vehicle_id %>">
                                            <%= vehicle.license_plate %>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Parking Slot *</label>
                                <select class="form-control" name="slot_id" required id="slotSelect">
                                    <option value="">Select Slot</option>
                                    <% slots.forEach(slot => { %>
                                        <option value="<%= slot.slot_id %>">
                                            Slot <%= slot.slot_number %> - <%= slot.slot_type %>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Status</label>
                                <select class="form-control" name="status">
                                    <option value="Pending">Pending</option>
                                    <option value="Confirmed">Confirmed (Paid)</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Start Time *</label>
                                <input type="datetime-local" class="form-control" name="start_time" required id="startTime" min="<%= new Date().toISOString().slice(0,16) %>">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">End Time *</label>
                                <input type="datetime-local" class="form-control" name="end_time" required id="endTime">
                            </div>
                        </div>
                        
                        <!-- Price Calculation -->
                        <div class="alert alert-info" id="priceCalculation" style="display: none;">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>Estimated Cost:</strong>
                                    <span id="calculatedAmount">KSh 0</span>
                                    <br>
                                    <small id="calculationDetails" class="text-muted"></small>
                                </div>
                                <i class="fas fa-calculator fa-2x"></i>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="submitReservation">
                            <i class="fas fa-calendar-plus me-1"></i>Create Reservation
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Cancel Confirmation Modal -->
    <div class="modal fade" id="cancelModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cancel Reservation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                        <h4>Confirm Cancellation</h4>
                    </div>
                    <p>Are you sure you want to cancel this reservation?</p>
                    <div class="reservation-details p-3 bg-light rounded mb-3">
                        <strong>Reservation Details:</strong><br>
                        Customer: <span id="cancelCustomerName" class="fw-bold"></span><br>
                        Vehicle: <span id="cancelVehiclePlate" class="fw-bold"></span><br>
                        Slot: <span id="cancelSlotNumber" class="fw-bold"></span>
                    </div>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        This action cannot be undone. The customer will be notified of the cancellation.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Reservation</button>
                    <button type="button" class="btn btn-danger" id="confirmCancelBtn">
                        <i class="fas fa-times me-1"></i>Cancel Reservation
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Mark as Paid Modal -->
    <div class="modal fade" id="markPaidModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Mark Reservation as Paid</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                        <h4>Confirm Payment</h4>
                    </div>
                    <p>Are you sure you want to mark this reservation as paid?</p>
                    <div class="reservation-details p-3 bg-light rounded mb-3">
                        <strong>Payment Details:</strong><br>
                        Customer: <span id="paidCustomerName" class="fw-bold"></span><br>
                        Amount: <span id="paidAmount" class="fw-bold text-success"></span><br>
                        Reservation ID: <span id="paidReservationId" class="fw-bold"></span>
                    </div>
                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle me-2"></i>
                        This will update the reservation status to "Confirmed" and mark payment as completed.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="confirmMarkPaidBtn">
                        <i class="fas fa-check me-1"></i>Mark as Paid
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentReservationId = null;
        let currentReservationData = null;

        document.addEventListener('DOMContentLoaded', function() {
            // Auto-dismiss alerts
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });

            // Cancel button click handlers
            document.querySelectorAll('.cancel-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    currentReservationId = this.dataset.reservationId;
                    currentReservationData = {
                        customer: this.dataset.customer,
                        vehicle: this.dataset.vehicle,
                        slot: this.dataset.slot
                    };
                    showCancelModal();
                });
            });

            // Mark as paid button click handlers
            document.querySelectorAll('.mark-paid-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    currentReservationId = this.dataset.reservationId;
                    currentReservationData = {
                        customer: this.dataset.customer,
                        amount: this.dataset.amount
                    };
                    showMarkPaidModal();
                });
            });

            // Confirm cancel button
            document.getElementById('confirmCancelBtn').addEventListener('click', confirmCancellation);

            // Confirm mark as paid button
            document.getElementById('confirmMarkPaidBtn').addEventListener('click', confirmMarkPaid);

            // Price calculation for new reservation
            const startTimeInput = document.getElementById('startTime');
            const endTimeInput = document.getElementById('endTime');

            if (startTimeInput && endTimeInput) {
                startTimeInput.addEventListener('change', calculatePrice);
                endTimeInput.addEventListener('change', calculatePrice);
            }

            // Set minimum end time based on start time
            if (startTimeInput) {
                startTimeInput.addEventListener('change', function() {
                    endTimeInput.min = this.value;
                    if (endTimeInput.value && endTimeInput.value < this.value) {
                        endTimeInput.value = '';
                    }
                    calculatePrice();
                });
            }

            // Calculate price when end time changes
            if (endTimeInput) {
                endTimeInput.addEventListener('change', calculatePrice);
            }
        });

        function calculatePrice() {
            const startTime = document.getElementById('startTime').value;
            const endTime = document.getElementById('endTime').value;
            
            if (!startTime || !endTime) {
                document.getElementById('priceCalculation').style.display = 'none';
                return;
            }

            const start = new Date(startTime);
            const end = new Date(endTime);
            const durationHours = Math.ceil((end - start) / (1000 * 60 * 60)); // Round up to nearest hour
            
            if (durationHours <= 0) {
                document.getElementById('priceCalculation').style.display = 'none';
                return;
            }

            const hourlyRate = 100; // Fixed rate of 100 KSh per hour
            const totalAmount = durationHours * hourlyRate;

            document.getElementById('calculatedAmount').textContent = 'KSh ' + totalAmount.toLocaleString();
            document.getElementById('calculationDetails').textContent = 
                `(${durationHours} hours Ã— KSh ${hourlyRate}/hour)`;
            document.getElementById('priceCalculation').style.display = 'block';
        }

        function showCancelModal() {
            document.getElementById('cancelCustomerName').textContent = currentReservationData.customer;
            document.getElementById('cancelVehiclePlate').textContent = currentReservationData.vehicle;
            document.getElementById('cancelSlotNumber').textContent = currentReservationData.slot;
            
            const cancelModal = new bootstrap.Modal(document.getElementById('cancelModal'));
            cancelModal.show();
        }

        function showMarkPaidModal() {
            document.getElementById('paidCustomerName').textContent = currentReservationData.customer;
            document.getElementById('paidAmount').textContent = 'KSh ' + parseFloat(currentReservationData.amount).toLocaleString();
            document.getElementById('paidReservationId').textContent = '#' + currentReservationId;
            
            const markPaidModal = new bootstrap.Modal(document.getElementById('markPaidModal'));
            markPaidModal.show();
        }

        function confirmCancellation() {
            const cancelBtn = document.getElementById('confirmCancelBtn');
            
            // Disable button and show loading
            cancelBtn.disabled = true;
            cancelBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Cancelling...';

            // Create a form to submit the cancellation
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = `/reservations/cancel/${currentReservationId}`;
            
            document.body.appendChild(form);
            form.submit();
        }

        function confirmMarkPaid() {
            const markPaidBtn = document.getElementById('confirmMarkPaidBtn');
            
            // Disable button and show loading
            markPaidBtn.disabled = true;
            markPaidBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Updating...';

            // Create a form to submit the mark as paid action
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = `/reservations/mark-paid/${currentReservationId}`;
            
            document.body.appendChild(form);
            form.submit();
        }

        // Enhanced form validation for reservation creation
        document.getElementById('reservationForm')?.addEventListener('submit', function(e) {
            const startTime = document.getElementById('startTime').value;
            const endTime = document.getElementById('endTime').value;
            const customerId = document.getElementById('customerSelect').value;
            const vehicleId = document.getElementById('vehicleSelect').value;
            const slotId = document.getElementById('slotSelect').value;
            
            if (!startTime || !endTime || !customerId || !vehicleId || !slotId) {
                e.preventDefault();
                alert('Please fill all required fields');
                return;
            }

            const start = new Date(startTime);
            const end = new Date(endTime);
            const now = new Date();

            if (start < now) {
                e.preventDefault();
                alert('Start time cannot be in the past');
                return;
            }

            if (end <= start) {
                e.preventDefault();
                alert('End time must be after start time');
                return;
            }

            // Show loading state
            const submitBtn = document.getElementById('submitReservation');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Creating...';
        });
    </script>
