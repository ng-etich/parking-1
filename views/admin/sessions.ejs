<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Parking Sessions - Parking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar { position: fixed; top: 0; bottom: 0; left: 0; z-index: 100; padding: 48px 0 0; box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1); }
        .sidebar-sticky { position: relative; top: 0; padding-top: .5rem; overflow-x: hidden; overflow-y: auto; }
        main { padding-top: 48px; }
    </style>
</head>
<body>
    <%- include('../patials/_dashheader') %>
    
    <div class="container-fluid">
        <div class="row">
            <%- include('../patials/_dashnav') %>
            
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Parking Sessions</h1>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#startSessionModal">
                        <i class="fas fa-play me-1"></i>Start Session
                    </button>
                </div>

                <!-- Server-side URL parameter handling -->
                <% if (success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <% if (success === 'session_started') { %>
                            Parking session started successfully!
                        <% } else if (success === 'session_ended') { %>
                            Parking session ended successfully!
                        <% } %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <% if (error === 'missing_fields') { %>
                            Please fill all required fields!
                        <% } else if (error === 'session_start_failed') { %>
                            Failed to start session. Please try again!
                        <% } else if (error === 'session_end_failed') { %>
                            Failed to end session. Please try again!
                        <% } %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Active Sessions -->
                <div class="card shadow mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-clock me-2 text-warning"></i>Active Parking Sessions
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (activeSessions.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Customer</th>
                                            <th>Vehicle</th>
                                            <th>Slot</th>
                                            <th>Entry Time</th>
                                            <th>Duration</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% activeSessions.forEach(session => { %>
                                            <tr>
                                                <td><%= session.customer_name %></td>
                                                <td><strong><%= session.license_plate %></strong></td>
                                                <td><span class="badge bg-primary">Slot <%= session.slot_number %></span></td>
                                                <td><%= new Date(session.entry_time).toLocaleString() %></td>
                                                <td>
                                                    <%= Math.round((new Date() - new Date(session.entry_time)) / (1000 * 60 * 60 * 24)) %> days
                                                </td>
                                                <td>
                                                    <form action="/sessions/end/<%= session.session_id %>" method="POST" 
                                                          class="d-inline" onsubmit="return confirm('End this parking session?')">
                                                        <button type="submit" class="btn btn-sm btn-warning">
                                                            <i class="fas fa-stop me-1"></i>End Session
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <p class="text-center text-muted py-4">No active parking sessions.</p>
                        <% } %>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Start Session Modal -->
    <div class="modal fade" id="startSessionModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Start New Parking Session</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/sessions/start" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Select Vehicle *</label>
                            <select class="form-control" name="vehicle_id" required>
                                <option value="">Choose Vehicle</option>
                                <% availableVehicles.forEach(vehicle => { %>
                                    <option value="<%= vehicle.vehicle_id %>">
                                        <%= vehicle.license_plate %> - <%= vehicle.customer_name %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Select Parking Slot *</label>
                            <select class="form-control" name="slot_id" required>
                                <option value="">Choose Slot</option>
                                <% availableSlots.forEach(slot => { %>
                                    <option value="<%= slot.slot_id %>">
                                        Slot <%= slot.slot_number %> 
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Start Session</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>