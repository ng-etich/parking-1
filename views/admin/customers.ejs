<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customers Management - Parking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar { position: fixed; top: 0; bottom: 0; left: 0; z-index: 100; padding: 48px 0 0; box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1); }
        .sidebar-sticky { position: relative; top: 0; padding-top: .5rem; overflow-x: hidden; overflow-y: auto; }
        main { padding-top: 48px; }
    </style>
</head>
<body>
    <%- include('../patials/_dashheader') %>
    
    <div class="container-fluid">
        <div class="row">
            <%- include('../patials/_dashnav') %>
            
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Customers Management</h1>
                </div>

                <!-- Server-side URL parameter handling -->
                <% if (success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        Customer role updated successfully!
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <% if (error === 'invalid_role') { %>
                            Invalid role selected!
                        <% } else if (error === 'role_update_failed') { %>
                            Failed to update role. Please try again!
                        <% } %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <div class="card shadow">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Role</th>
                                        <th>Registered</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (customers.length > 0) { %>
                                        <% customers.forEach(customer => { %>
                                            <tr>
                                                <td><%= customer.full_name %></td>
                                                <td><%= customer.email %></td>
                                                <td><%= customer.phone %></td>
                                                <td>
                                                    <form action="/customers/update-role/<%= customer.customer_id %>" method="POST" class="d-inline">
                                                        <select name="role" class="form-select form-select-sm" onchange="this.form.submit()"
                                                                <%= customer.email === 'admin@example.com' || customer.email === 'operator@example.com' ? 'disabled' : '' %>>
                                                            <option value="customer" <%= customer.role === 'customer' ? 'selected' : '' %>>Customer</option>
                                                            <option value="operator" <%= customer.role === 'operator' ? 'selected' : '' %>>Operator</option>
                                                            <option value="admin" <%= customer.role === 'admin' ? 'selected' : '' %>>Admin</option>
                                                        </select>
                                                    </form>
                                                </td>
                                                <td><%= new Date(customer.registered_at).toLocaleDateString() %></td>
                                                <td>
                                                    <% if (customer.role !== 'admin' && customer.role !== 'operator') { %>
                                                        <span class="badge bg-info">User</span>
                                                    <% } else if (customer.role === 'operator') { %>
                                                        <span class="badge bg-warning">Operator</span>
                                                    <% } else { %>
                                                        <span class="badge bg-danger">Admin</span>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="6" class="text-center py-4 text-muted">
                                                No customers found.
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>