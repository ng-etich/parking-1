    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #a8e207 0%, #764ba2 100%);
      min-height: 100vh;
      color: #333;
      overflow-x: hidden;
