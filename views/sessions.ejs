<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Parking Sessions</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      color: #333;
      overflow-x: hidden;
    }

    /* Header Styles */
    header {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(10px);
      color: white;
      padding: 1rem 2rem;
      box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
      border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .header-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 1200px;
      margin: 0 auto;
    }

    .logo {
      font-size: 1.8rem;
      font-weight: 800;
      background: linear-gradient(45deg, #ffd89b, #19547b);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .nav-links {
      display: flex;
      gap: 1.5rem;
    }

    .nav-links a {
      color: white;
      text-decoration: none;
      font-weight: 500;
      transition: all 0.3s;
      padding: 0.5rem 1rem;
      border-radius: 20px;
    }

    .nav-links a:hover, .nav-links a.active {
      background: rgba(255, 255, 255, 0.2);
      backdrop-filter: blur(10px);
    }

    /* Main Container */
    .container {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 0 1.5rem;
    }

    /* Page Title */
    h2 {
      color: white;
      margin-bottom: 1.5rem;
      padding-bottom: 0.5rem;
      font-weight: 700;
      font-size: 2.5rem;
      text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
      text-align: center;
    }

    /* Alert Messages */
    .alert {
      padding: 1rem;
      border-radius: 10px;
      margin-bottom: 1.5rem;
      font-weight: 500;
    }

    .alert-success {
      background: rgba(72, 187, 120, 0.2);
      color: #2d3748;
      border: 1px solid rgba(72, 187, 120, 0.3);
    }

    .alert-error {
      background: rgba(245, 101, 101, 0.2);
      color: #2d3748;
      border: 1px solid rgba(245, 101, 101, 0.3);
    }

    /* Form Styles */
    .form-container {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      border-radius: 20px;
      padding: 2rem;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
      margin-bottom: 2rem;
      border: 1px solid rgba(255, 255, 255, 0.5);
      transition: all 0.3s ease;
    }

    .form-container:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 50px rgba(0, 0, 0, 0.2);
    }

    .form-title {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
      color: #2c3e50;
      font-weight: 700;
      text-align: center;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 600;
      color: #4a5568;
    }

    select {
      width: 100%;
      padding: 1rem;
      border: 1px solid rgba(0, 0, 0, 0.1);
      border-radius: 10px;
      font-size: 1rem;
      transition: all 0.3s;
      background: rgba(255, 255, 255, 0.8);
    }

    select:focus {
      border-color: #4299e1;
      box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.2);
      outline: none;
      background: white;
    }

    .btn {
      padding: 1rem 2rem;
      border: none;
      border-radius: 50px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      position: relative;
      overflow: hidden;
    }

    .btn-primary {
      background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
      color: white;
      box-shadow: 0 8px 25px rgba(106, 17, 203, 0.4);
    }

    .btn-primary:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 30px rgba(106, 17, 203, 0.6);
    }

    .btn-success {
      background: linear-gradient(135deg, #38a169 0%, #2f855a 100%);
      color: white;
      box-shadow: 0 8px 25px rgba(56, 161, 105, 0.4);
    }

    .btn-success:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 30px rgba(56, 161, 105, 0.6);
    }

    /* Table Styles */
    .table-container {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
      margin-top: 2rem;
      border: 1px solid rgba(255, 255, 255, 0.5);
      transition: all 0.3s ease;
    }

    .table-container:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 50px rgba(0, 0, 0, 0.2);
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    thead {
      background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
      color: white;
    }

    th {
      padding: 1.2rem;
      text-align: left;
      font-weight: 600;
    }

    tbody tr {
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    tbody tr:nth-child(even) {
      background-color: rgba(0, 0, 0, 0.02);
    }

    tbody tr:hover {
      background-color: rgba(66, 153, 225, 0.1);
    }

    td {
      padding: 1.2rem;
    }

    /* Action Buttons */
    .action-buttons {
      display: flex;
      gap: 0.5rem;
    }

    .btn-danger {
      background: linear-gradient(135deg, #e53e3e 0%, #c53030 100%);
      color: white;
      padding: 0.6rem 1.2rem;
      font-size: 0.85rem;
      border-radius: 50px;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.3rem;
      transition: all 0.3s;
      border: none;
      cursor: pointer;
    }

    .btn-danger:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(229, 62, 62, 0.4);
    }

    /* Footer Styles */
    footer {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(10px);
      color: rgba(255, 255, 255, 0.9);
      text-align: center;
      padding: 2rem;
      margin-top: 3rem;
      border-top: 1px solid rgba(255, 255, 255, 0.2);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .header-content {
        flex-direction: column;
        gap: 1rem;
      }

      .nav-links {
        flex-wrap: wrap;
        justify-content: center;
      }

      table {
        display: block;
        overflow-x: auto;
      }

      .action-buttons {
        flex-direction: column;
      }
      
      h2 {
        font-size: 2rem;
      }
    }

    /* Divider */
    hr {
      border: none;
      height: 1px;
      background: linear-gradient(to right, transparent, rgba(255,255,255,0.5), transparent);
      margin: 3rem 0;
    }

    /* Floating Elements */
    .floating-elements {
      position: fixed;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      pointer-events: none;
      z-index: -1;
    }

    .floating-element {
      position: absolute;
      font-size: 2rem;
      opacity: 0.1;
      animation: floatAround 20s linear infinite;
    }

    @keyframes floatAround {
      0% { transform: translate(0, 0) rotate(0deg); }
      25% { transform: translate(100px, 50px) rotate(90deg); }
      50% { transform: translate(50px, 100px) rotate(180deg); }
      75% { transform: translate(-50px, 50px) rotate(270deg); }
      100% { transform: translate(0, 0) rotate(360deg); }
    }

    /* Stats Section */
    .stats-section {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      padding: 3rem 2rem;
      border-radius: 20px;
      margin: 2rem 0;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 2rem;
      max-width: 1200px;
      margin: 0 auto;
    }

    .stat-item {
      text-align: center;
      padding: 1.5rem;
    }

    .stat-number {
      font-size: 2.5rem;
      font-weight: 800;
      margin-bottom: 0.5rem;
      background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .stat-label {
      font-size: 1rem;
      color: #4a5568;
      font-weight: 500;
    }

    /* Status Badges */
    .status-badge {
      padding: 0.4rem 1rem;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 600;
      display: inline-block;
    }

    .badge-active {
      background: linear-gradient(135deg, #38a169, #2f855a);
      color: white;
    }

    .badge-completed {
      background: linear-gradient(135deg, #4299e1, #3182ce);
      color: white;
    }

    /* No Data State */
    .no-data {
      text-align: center;
      padding: 3rem;
      color: #718096;
      font-style: italic;
    }

    /* Form Layout */
    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem;
    }

    @media (max-width: 768px) {
      .form-row {
        grid-template-columns: 1fr;
      }
    }

    /* Session Cards */
    .session-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      border-radius: 15px;
      padding: 1.5rem;
      margin-bottom: 1rem;
      border: 1px solid rgba(255, 255, 255, 0.5);
      transition: all 0.3s ease;
    }

    .session-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .session-header {
      display: flex;
      justify-content: between;
      align-items: center;
      margin-bottom: 1rem;
    }

    .session-vehicle {
      font-weight: 700;
      font-size: 1.2rem;
      color: #2d3748;
    }

    .session-details {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 1rem;
      margin-bottom: 1rem;
    }

    .session-detail {
      display: flex;
      flex-direction: column;
    }

    .detail-label {
      font-size: 0.85rem;
      color: #718096;
      font-weight: 500;
    }

    .detail-value {
      font-weight: 600;
      color: #2d3748;
    }

    .fee-amount {
      font-size: 1.3rem;
      font-weight: 800;
      color: #2d3748;
    }

    /* Duration Timer */
    .duration-timer {
      font-family: monospace;
      font-size: 1.1rem;
      font-weight: 600;
      color: #e53e3e;
    }

    /* Slot Availability */
    .slot-available {
      color: #38a169;
      font-weight: 600;
    }

    .slot-occupied {
      color: #e53e3e;
      font-weight: 600;
    }
  </style>
</head>
<body>
  <!-- Floating Elements -->
  <div class="floating-elements">
    <div class="floating-element" style="top: 10%; left: 5%;">‚è±Ô∏è</div>
    <div class="floating-element" style="top: 20%; right: 10%;">üöó</div>
    <div class="floating-element" style="bottom: 30%; left: 15%;">üí∞</div>
    <div class="floating-element" style="bottom: 20%; right: 5%;">üÖøÔ∏è</div>
  </div>

  <!-- Header -->
  <header>
    <div class="header-content">
      <div class="logo">Parking Sessions</div>
      <nav class="nav-links">
        <a href="/dashboard">Dashboard</a>
        <a href="/customers">Customers</a>
        <a href="/vehicles">Vehicles</a>
        <a href="/sessions" class="active">Sessions</a>
        <a href="/reservations">Reservations</a>
        <% if (isAdmin) { %>
          <a href="/admin">Admin</a>
        <% } %>
      </nav>
    </div>
  </header>

  <main class="container">
    <h2>Parking Sessions Management</h2>

    <!-- Alert Messages -->
    <% if (typeof success !== 'undefined') { %>
      <div class="alert alert-success">
        <% if (success === 'session_started') { %>
          ‚úÖ Parking session started successfully!
        <% } else if (success === 'session_ended') { %>
          ‚úÖ Parking session ended successfully!
        <% } %>
      </div>
    <% } %>

    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-error">
        <% if (error === 'missing_fields') { %>
          ‚ùå Please fill in all required fields.
        <% } else if (error === 'slot_unavailable') { %>
          ‚ùå Selected slot is no longer available.
        <% } else if (error === 'session_not_found') { %>
          ‚ùå Session not found.
        <% } else { %>
          ‚ùå An error occurred. Please try again.
        <% } %>
      </div>
    <% } %>

    <!-- Stats Section -->
    <div class="stats-section">
      <div class="stats-grid">
        <div class="stat-item">
          <div class="stat-number"><%= activeSessions.length %></div>
          <div class="stat-label">Active Sessions</div>
        </div>
        <div class="stat-item">
          <div class="stat-number"><%= completedSessions.length %></div>
          <div class="stat-label">Completed Today</div>
        </div>
        <div class="stat-item">
          <div class="stat-number"><%= availableSlots.length %></div>
          <div class="stat-label">Available Slots</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">
            <% 
              const totalRevenue = completedSessions.reduce((sum, session) => sum + (session.total_fee || 0), 0);
            %>
            Ksh <%= totalRevenue.toFixed(2) %>
          </div>
          <div class="stat-label">Today's Revenue</div>
        </div>
      </div>
    </div>

    <!-- Start New Session -->
    <div class="form-container">
      <h3 class="form-title">Start New Parking Session</h3>
      <form action="/sessions/start" method="POST" id="sessionForm">
        <div class="form-row">
          <div class="form-group">
            <label for="vehicle_id">Select Vehicle *</label>
            <select name="vehicle_id" id="vehicle_id" required>
              <% if (vehicles && vehicles.length > 0) { %>
                <option value="">Choose a vehicle...</option>
                <% vehicles.forEach(v => { %>
                  <option value="<%= v.vehicle_id %>">
                    üöó <%= v.license_plate %> - <%= v.customer_name || 'Unassigned' %>
                  </option>
                <% }) %>
              <% } else { %>
                <option disabled>No vehicles available</option>
              <% } %>
            </select>
          </div>

          <div class="form-group">
            <label for="slot_id">Select Parking Slot *</label>
            <select name="slot_id" id="slot_id" required>
              <% if (availableSlots && availableSlots.length > 0) { %>
                <option value="">Choose a slot...</option>
                <% availableSlots.forEach(s => { %>
                  <option value="<%= s.slot_id %>">
                    üÖøÔ∏è Slot <%= s.slot_number %> 
                    <span class="slot-available">(Available)</span>
                  </option>
                <% }) %>
              <% } else { %>
                <option disabled>No slots available</option>
              <% } %>
            </select>
          </div>
        </div>

        <button type="submit" class="btn btn-primary">
          <span>‚ñ∂Ô∏è</span>
          Start Parking Session
        </button>
      </form>
    </div>

    <!-- Active Sessions -->
    <div class="table-container">
      <h3 style="padding: 1.5rem; margin: 0; color: #2c3e50; border-bottom: 1px solid #e2e8f0;">
        üü¢ Active Parking Sessions
      </h3>
      
      <% if (activeSessions.length === 0) { %>
        <div class="no-data">
          No active parking sessions. Start a new session above!
        </div>
      <% } else { %>
        <table>
          <thead>
            <tr>
              <th>Vehicle</th>
              <th>Customer</th>
              <th>Slot</th>
              <th>Entry Time</th>
              <th>Duration</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% activeSessions.forEach(s => { %>
              <tr>
                <td>
                  <strong style="font-family: monospace;">
                    <%= s.license_plate %>
                  </strong>
                </td>
                <td>
                  <% if (s.customer_name) { %>
                    <%= s.customer_name %>
                  <% } else { %>
                    <span style="color: #a0aec0; font-style: italic;">Unassigned</span>
                  <% } %>
                </td>
                <td>
                  <span class="badge-active">Slot <%= s.slot_number %></span>
                </td>
                <td>
                  <div class="detail-value">
                    <%= new Date(s.entry_time).toLocaleTimeString() %>
                  </div>
                  <div class="detail-label">
                    <%= new Date(s.entry_time).toLocaleDateString() %>
                  </div>
                </td>
                <td>
                  <div class="duration-timer" id="duration-<%= s.session_id %>">
                    Calculating...
                  </div>
                </td>
                <td>
                  <form action="/sessions/end/<%= s.session_id %>" method="POST" style="display:inline;" 
                        onsubmit="return confirm('End parking session for <%= s.license_plate %>?')">
                    <button type="submit" class="btn btn-danger">
                      <span>‚èπÔ∏è</span>
                      End Session
                    </button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } %>
    </div>

    <!-- Completed Sessions -->
    <div class="table-container" style="margin-top: 2rem;">
      <h3 style="padding: 1.5rem; margin: 0; color: #2c3e50; border-bottom: 1px solid #e2e8f0;">
        üîµ Completed Sessions (Last 50)
      </h3>
      
      <% if (completedSessions.length === 0) { %>
        <div class="no-data">
          No completed sessions yet.
        </div>
      <% } else { %>
        <table>
          <thead>
            <tr>
              <th>Vehicle</th>
              <th>Customer</th>
              <th>Slot</th>
              <th>Entry Time</th>
              <th>Exit Time</th>
              <th>Duration</th>
              <th>Total Fee</th>
            </tr>
          </thead>
          <tbody>
            <% completedSessions.forEach(s => { %>
              <tr>
                <td>
                  <strong style="font-family: monospace;">
                    <%= s.license_plate %>
                  </strong>
                </td>
                <td>
                  <% if (s.customer_name) { %>
                    <%= s.customer_name %>
                  <% } else { %>
                    <span style="color: #a0aec0; font-style: italic;">Unassigned</span>
                  <% } %>
                </td>
                <td>
                  <span class="badge-completed">Slot <%= s.slot_number %></span>
                </td>
                <td>
                  <div class="detail-value">
                    <%= new Date(s.entry_time).toLocaleTimeString() %>
                  </div>
                  <div class="detail-label">
                    <%= new Date(s.entry_time).toLocaleDateString() %>
                  </div>
                </td>
                <td>
                  <div class="detail-value">
                    <%= new Date(s.exit_time).toLocaleTimeString() %>
                  </div>
                  <div class="detail-label">
                    <%= new Date(s.exit_time).toLocaleDateString() %>
                  </div>
                </td>
                <td>
                  <% 
                    const entry = new Date(s.entry_time);
                    const exit = new Date(s.exit_time);
                    const duration = Math.round((exit - entry) / (1000 * 60)); // minutes
                    const hours = Math.floor(duration / 60);
                    const minutes = duration % 60;
                  %>
                  <%= hours > 0 ? `${hours}h ` : '' %><%= minutes %>m
                </td>
                <td>
                  <div class="fee-amount">
                    Ksh <%= (s.total_fee || 0).toFixed(2) %>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } %>
    </div>
  </main>

  <!-- Footer -->
  <footer>
    <p>&copy; 2023 Parking Management System. All rights reserved.</p>
    <% if (user) { %>
      <p style="margin-top: 0.5rem; font-size: 0.9rem;">
        Logged in as: <%= user.username %> 
        <% if (isAdmin) { %> (Administrator) <% } %>
        | <a href="/logout" style="color: rgba(255,255,255,0.8);">Logout</a>
      </p>
    <% } %>
  </footer>

  <script>
    // Add interactive elements
    document.addEventListener('DOMContentLoaded', function() {
      const buttons = document.querySelectorAll('.btn');
      buttons.forEach(button => {
        button.addEventListener('mouseenter', function() {
          this.style.transform = 'translateY(-3px)';
        });
        
        button.addEventListener('mouseleave', function() {
          this.style.transform = 'translateY(0)';
        });
      });

      // Add fade-in animation for table rows
      const tableRows = document.querySelectorAll('tbody tr');
      tableRows.forEach((row, index) => {
        row.style.opacity = '0';
        row.style.transform = 'translateY(20px)';
        row.style.transition = 'all 0.5s ease';
        
        setTimeout(() => {
          row.style.opacity = '1';
          row.style.transform = 'translateY(0)';
        }, 100 * index);
      });

      // Auto-hide alerts after 5 seconds
      const alerts = document.querySelectorAll('.alert');
      alerts.forEach(alert => {
        setTimeout(() => {
          alert.style.opacity = '0';
          alert.style.transition = 'opacity 0.5s ease';
          setTimeout(() => alert.remove(), 500);
        }, 5000);
      });

      // Update duration timers for active sessions
      function updateDurations() {
        <% activeSessions.forEach(s => { %>
          const entryTime<%= s.session_id %> = new Date('<%= s.entry_time %>');
          const now<%= s.session_id %> = new Date();
          const diff<%= s.session_id %> = now<%= s.session_id %> - entryTime<%= s.session_id %>;
          
          const hours<%= s.session_id %> = Math.floor(diff<%= s.session_id %> / (1000 * 60 * 60));
          const minutes<%= s.session_id %> = Math.floor((diff<%= s.session_id %> % (1000 * 60 * 60)) / (1000 * 60));
          const seconds<%= s.session_id %> = Math.floor((diff<%= s.session_id %> % (1000 * 60)) / 1000);
          
          const durationElement<%= s.session_id %> = document.getElementById('duration-<%= s.session_id %>');
          if (durationElement<%= s.session_id %>) {
            durationElement<%= s.session_id %>.textContent = 
              `${hours<%= s.session_id %>.toString().padStart(2, '0')}:${minutes<%= s.session_id %>.toString().padStart(2, '0')}:${seconds<%= s.session_id %>.toString().padStart(2, '0')}`;
          }
        <% }); %>
      }

      // Update durations every second
      updateDurations();
      setInterval(updateDurations, 1000);

      // Form validation
